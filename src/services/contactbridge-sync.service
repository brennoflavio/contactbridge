[Unit]
Description=Contact Bridge Sync Service

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 /opt/click.ubuntu.com/contactbridge.brennoflavio/current/src/background_sync.py
WorkingDirectory=/opt/click.ubuntu.com/contactbridge.brennoflavio/current
Environment="PYTHONPATH=/opt/click.ubuntu.com/contactbridge.brennoflavio/current:$PYTHONPATH"
Restart=on-failure

[Install]
WantedBy=graphical-session.target
